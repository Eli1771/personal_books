<style>

  a.nav_link:link {
    color: #999;
    text-decoration: none;
    font-weight: bold;
  }
  a.nav_link:visited {
    color: #999;
  }
  a.nav_link:hover {
    color:black;
  }

  .flash_good {
    color: green;
  }
  .flash_bad {
    color: red;
  }

</style>

<% if flash.has?(:message) %>
  <%= "<h3 class=#{flash[:message]}</h3>" %>
<% end %>

<h1>Your Books</h1>

<ul><% @books.sort_by {|book| book.title}.each do |book| %>
  <li><a href="/lib/book/<%= book.id %>" style="color: black; text-decoration: none"><%= book.title %> - <%= book.topic.name %></a></li>
<% end %></ul>

